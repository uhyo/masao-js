{
  "name": "masao",
  "version": "0.1.12",
  "description": "Utilities for Canvas Masao.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:tsc": "tsc",
    "build:json": "cpx \"data/*.json\" dist/ -u",
    "build:json5": "./build/json5.js data/ dist/",
    "clean": "rimraf dist/",
    "watch": "npm-run-all --parallel watch:*",
    "watch:tsc": "tsc --watch",
    "watch:json": "cpx \"data/*.json\" dist/ -uw",
    "watch:json5": "./build/json5.js data/ dist/ --watch",
    "precommit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.{json,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uhyo/masao-js"
  },
  "keywords": [
    "masao"
  ],
  "author": "uhyo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uhyo/masao-js/issues"
  },
  "homepage": "https://github.com/uhyo/masao-js",
  "dependencies": {
    "jsonschema": "^1.2.4"
  },
  "devDependencies": {
    "@types/extend": "^3.0.1",
    "cpx": "^1.5.0",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "json5": "^2.1.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "typescript": "^3.3.3333",
    "watch": "^1.0.1"
  }
}
